apiVersion: dapr.io/v1alpha1
kind: Component
metadata:
  name: secretstore-vault
spec:
  type: secretstores.hashicorp.vault
  version: v1
  metadata:
  - name: vaultAddr
    value: http://vault:8200
  - name: vaultToken
    value: development-root-token
  - name: vaultKVPrefix
    value: dapr
  - name: vaultKVVersion
    value: "2"
  - name: skipVerify
    value: "true"
scopes:
- services-api
- content-api
- public-gateway
- admin-gateway