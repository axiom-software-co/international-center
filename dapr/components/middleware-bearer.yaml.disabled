apiVersion: dapr.io/v1alpha1
kind: Component
metadata:
  name: bearer
spec:
  type: middleware.http.bearer
  version: v1
  metadata:
  - name: issuer
    value: "http://authentik:9000/application/o/international-center/"
  - name: audience
    value: "international-center-api"
  - name: token
    secretKeyRef:
      name: api-token
      key: token
  - name: authHeader
    value: "Authorization"
  - name: prefix
    value: "Bearer "